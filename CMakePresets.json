{
  "version": 6,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "debug-clang",
      "inherits": "base",
      "displayName": "Debug (Clang)",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "release-clang",
      "inherits": "base",
      "displayName": "Release (Clang)",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "debug-gcc",
      "inherits": "base",
      "displayName": "Debug (GCC)",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "release-gcc",
      "inherits": "base",
      "displayName": "Release (GCC)",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "headless-gcc",
      "inherits": "debug-gcc",
      "displayName": "Headless Debug (GCC)",
      "cacheVariables": {
        "SDL_X11": "OFF",
        "SDL_WAYLAND": "OFF",
        "SDL_OPENGL": "OFF",
        "SDL_OPENGLES": "OFF",
        "SDL_UNIX_CONSOLE_BUILD": "ON"
      }
    }
  ],
  "buildPresets": [
    {"name": "debug-clang", "configurePreset": "debug-clang"},
    {"name": "release-clang", "configurePreset": "release-clang"},
    {"name": "debug-gcc", "configurePreset": "debug-gcc"},
    {"name": "release-gcc", "configurePreset": "release-gcc"},
    {"name": "headless-gcc", "configurePreset": "headless-gcc"}
  ]
}
